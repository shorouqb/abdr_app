<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_current_booking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vip.abdr_app.current_booking"
    android:gravity="center">


    <TextView
        android:text="Booking reference :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/tv"
        android:layout_marginLeft="45dp"
        android:textSize="18dp" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="165dp"
        android:id="@+id/TestViewFR"
        android:layout_alignLeft="@+id/tv"
        android:textSize="18dp"/>

    <TextView
        android:text="Booking status :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:id="@+id/tv1"
        android:textSize="18dp"/>
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewstatus"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="155dp"
        android:layout_alignLeft="@+id/tv1"
        android:layout_below="@+id/TestViewFR"
        android:textSize="18dp"/>


    <Button
        android:text="Contact Driver "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact_btn"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/textViewstatus"
        android:layout_centerHorizontal="true"
        />


    <fragment
        android:layout_marginTop="10dp"
        android:id="@+id/Fram"
        android:layout_width="350dp"
        android:layout_height="330dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/contact_btn"
        android:background="@drawable/border"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        >

    </fragment>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/don"
        android:id="@+id/finish_btn"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_FT"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textSize="17dp"
        android:gravity="center"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Fram"
        android:layout_alignRight="@+id/Fram"
        android:layout_alignEnd="@+id/Fram"
        android:textColor="#ff0000"
        android:id="@+id/duration" />


</RelativeLayout>
